<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <Result Status="401"
                        Title="Sorry, You're not authorized to reach this page."
                        Extra="extra" />
            </NotAuthorized>
            <Authorizing>
                <Spin size="large" />
            </Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <Result Status="500"
                    Title="Sorry, there's nothing at this address."
                    Extra="extra" />
        </LayoutView>
    </NotFound>
</Router>
<AntContainer />
